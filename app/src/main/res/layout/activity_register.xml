<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginTop="20sp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="botonVolver"
            android:onClick="volverPantallaHomeCategorias"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="80sp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/urbanist_bold"
            android:text="¡Hola! Regístrate para comenzar"
            android:textColor="#1E232C"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="357dp"
            android:layout_height="81dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="60dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:fontFamily="@font/urbanist_medium"
            android:hint="Usuario"
            android:inputType="text"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="357dp"
            android:layout_height="81dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:fontFamily="@font/urbanist_medium"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="369dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#272E39"
            android:fontFamily="@font/urbanist_semibold"
            android:onClick="volverPantallaHomeCategorias"
            android:text="Registrar"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="124dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ya tienes una cuenta? " />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="irPantallaLogin"
                android:text="Ingresa ahora"
                android:textColor="#35C2C1" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>