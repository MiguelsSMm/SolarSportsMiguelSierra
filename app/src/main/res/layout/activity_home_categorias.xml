<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeCategoriasActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginTop="20sp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="volver"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="30sp"
            android:fontFamily="@font/urbanist_bold"
            android:text="Categorias"
            android:textSize="42sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/border_layout"
            android:clickable="true"
            android:onClick="irPantallaRegistroCategoria"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="226dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_bold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Canchas"
                android:textSize="38sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="130dp"
                android:layout_height="133dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/icono_cancha" />

        </LinearLayout>


        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/shadow_bottom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/border_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="226dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_bold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Gimnasios"
                android:textSize="38sp" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="130dp"
                android:layout_height="133dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/icono_gimnasio" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/shadow_bottom" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>