<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroCategoriaActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginTop="20sp"
            android:backgroundTint="#FFFFFF"
            android:contentDescription="botonVolver"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40sp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/urbanist_bold"
            android:text="Registro en cancha"
            android:textColor="#1E232C"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="25sp"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Datos de la terraza solar"
            android:textColor="#54595E"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/urbanist_medium"
            android:text="Sede"
            android:textColor="#4F4F4F"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edittext_background" />

        <TextView
            android:id="@+id/textViewCantidadProducida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/urbanist_medium"
            android:text="Cantidad de energia producida"
            android:textColor="#4F4F4F"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:fontFamily="@font/urbanist_medium"
            android:hint="Cantidad de energia producida"
            android:inputType="text"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/textViewValorAhorrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/urbanist_medium"
            android:text="Valor ahorrado"
            android:textColor="#4F4F4F"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="20sp"
            android:background="@drawable/edittext_background"
            android:ems="10"
            android:fontFamily="@font/urbanist_medium"
            android:hint="Valor ahorrado"
            android:inputType="textPassword"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/urbanist_medium"
            android:text="Mes"
            android:textColor="#4F4F4F"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="60sp"
            android:background="@drawable/edittext_background" />

        <Button
            android:id="@+id/button5"
            android:layout_width="369dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#272E39"
            android:fontFamily="@font/urbanist_semibold"
            android:text="Registrar"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>