<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1E23"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="44dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="556dp"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/solarsports" />

        <Button
            android:id="@+id/buttonIngresar"
            android:layout_width="379dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#272E39"
            android:fontFamily="@font/roboto_bold"
            android:onClick="irPantallaLogin"
            android:text="Ingresar"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/buttonRegistrar"
            android:layout_width="379dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="71dp"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/roboto_bold"
            android:onClick="irPantallaRegistrar"
            android:text="Registrar"
            android:textColor="#1E232C"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="184dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:inputType="text"
            android:text="Â© Copyright SM 2024"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>